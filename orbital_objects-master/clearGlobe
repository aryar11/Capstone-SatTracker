function clearGlobe() {
    console.log("Clearing Globe");

    // Loop through each satellite cube and remove it from the scene
    for (var i = satelliteCubes.length - 1; i >= 0; i--) {
        var cube = satelliteCubes[i];
        globe.scene.remove(cube); // Remove cube from scene

        // Proper cleanup to ensure memory is released
        cube.geometry.dispose();
        cube.material.dispose();
    }
    satelliteCubes = [];
    console.log("Satellite cubes cleared");

    if (globe.points) {
        globe.scene.remove(globe.points);
        globe.points.geometry.dispose();
        globe.points.material.dispose();
        globe.points = null;
        console.log("Globe points cleared");
    }
}
